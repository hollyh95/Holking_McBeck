@model IEnumerable<INTEX.Models.Invoice>

@{
    ViewBag.Title = "Invoices";
}

<h2>Invoices</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Order.Customer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PaymentDueDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EarlyPaymentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EarlyPaymentDiscount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SentDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AdvancedAmount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RunningBalance)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Order.Customer.CustName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentDueDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EarlyPaymentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EarlyPaymentDiscount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SentDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AdvancedAmount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RunningBalance)
        </td>

        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.InvoiceID }) |
            @Html.ActionLink("Details", "Details", new { id=item.InvoiceID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.InvoiceID })
        </td>
    </tr>
}

</table>
