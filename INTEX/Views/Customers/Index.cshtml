        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustStreetAddress1)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CustStreetAddress2)
        </th>
