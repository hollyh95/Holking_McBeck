            @Html.DisplayFor(modelItem => item.CustPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustStreetAddress1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustStreetAddress2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.City)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Region.RegionName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Location.Country.CountryName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustID })
